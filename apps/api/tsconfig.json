{
    "extends": "@stickerapp-org/emporio-tsconfig/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "./src",
        "sourceMap": true,
        "moduleResolution": "NodeNext",
        "declaration": true,
        "strict": true,
        "module": "NodeNext",
        "target": "ES6",
        "paths": {
            "$app/*": ["./app/*"],
            "$data/*": ["./data/*"],
            "$/*": ["./*"]
        },
        "plugins": [{ "transform": "typescript-transform-paths" }]
    }
}
