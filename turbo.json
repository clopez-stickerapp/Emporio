{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		"**/.env.*local"
	],
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				"dist/**"
			]
		},
		"test": {
			"dependsOn": [
				"^test"
			]
		},
		"lint": {
			"dependsOn": [
				"^lint"
			]
		},
		"format": {
			"dependsOn": [
				"^format"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}